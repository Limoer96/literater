doctype html
html
    head
        meta(charset='utf8')
        title= title
        link(rel='stylesheet' type='text/css' href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/register.css')
        script(src='/javascripts/jquery-1.11.1.min.js')
        //script(src='/javascripts/index.js')
        script(src='/javascripts/bootstrap.min.js')
    body
        ul.list-inline
            li
                a(href='/users/test') 首页
            li
                a(href='#') 占位符号

        .container
            .load
                form(role='form' method='post' action='/users/register')
                    .form-group
                        label(for='u_register_id')
                        input.form-control(type='text', placeholder='输入账户,用作登录' id='u_register_id' name='userid')
                    .form-group
                        label(for='u_register_name')
                        input.form-control(id='u_register_name' type='text' name='name' placeholder='输入你的真实姓名')
                    .form-group
                        label(for='u_register_password')
                        input.form-control(id='u_register_password' type='password' name='psd' placeholder='登录密码')
                    .checkbox
                        label
                            input(type='checkbox' name='remenber_password')
                            p 记住密码

                    .form-group
                        input.btn.btn-primary(type='submit' value='提交' id='left_btn')
                        input.btn.btn-default(type='reset' value='重设' id='right_btn')


